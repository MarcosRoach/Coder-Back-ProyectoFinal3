<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    {{! Bootstrap CSS }}
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM"
      crossorigin="anonymous"
    />

    <!-- Font Awesome para el avatar -->
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css"
    />

    <!-- Hoja de estilos personalizada -->
    <link rel="stylesheet" href="/css/realTimeProducts.css" />
    <title>Productos</title>
  </head>
  <body>

    <!-- Encabezado con datos de sesión -->
    <header class="bg-primary text-white text-center py-4">
      <div class="container">
        <div class="row align-self-center justify-content-end">
          <div class="col-md-2 avatar-box">
            <i class="fas fa-user-circle avatar-icon"></i>
            <!-- Avatar -->
          </div>
          <div
            class="col-md-10 session-data header-third text-right"
            id="session-data"
          >
            <!-- Datos de sesión -->

          </div>
        </div>
      </div>
    </header>

    <!-- Cuerpo de la página -->
    <main class="container py-4">
      <!-- Menú lateral con filtros -->
      <div class="row">
        <div class="col-md-3">
          <h2>Filtros</h2>
          <form id="filters-form">
            <div class="mb-3">
              <label for="limit">Limit:</label>
              <input
                type="number"
                id="limit"
                name="limit"
                class="form-control"
                placeholder="Enter limit"
              />
            </div>
            <div class="mb-3">
              <label for="sort">Sort:</label>
              <select id="sort" name="sort" class="form-control">
                <option value="asc">Ascending</option>
                <option value="desc">Descending</option>
              </select>
            </div>
            <div class="mb-3">
              <label for="category">Category:</label>
              <select id="category" name="category" class="form-control">
                <option value="Todos" selected>Todos</option>
                <option value="Altavoces">Altavoces</option>
                <option value="Audífonos">Audífonos</option>
                <option value="Audio">Audio</option>
                <option value="Cámaras">Cámaras</option>
                <option value="Celulares">Celulares</option>
                <option value="Computadoras">Computadoras</option>
                <option value="Drones">Drones</option>
                <option value="Electrónicos">Electrónicos</option>
                <option value="Laptops">Laptops</option>
                <option value="Tabletas">Tabletas</option>
                <option value="Videojuegos">Videojuegos</option>
                <option value="Wearables">Wearables</option>
              </select>

            </div>
            <button type="submit" class="btn btn-primary">Apply Filters</button>
            <button type="submit" class="btn btn-danger">Clear Filters</button>
          </form>
        </div>

        <!-- Grid para mostrar productos -->
        <div class="col-md-9">
          <h2>Productos</h2>
          <div
            class="row justify-content-center row-cols-1 row-cols-md-3 g-4"
            id="products-container"
          >
            <!-- Los productos se agregarán dinámicamente aquí desde el archivo JS -->
          </div>

          <!-- Sección de paginación -->
          <div class="row justify-content-center mt-4" id="paginate-container">
            <!-- Los botones de paginación se agregarán dinámicamente aquí desde el archivo JS -->
          </div>
        </div>
      </div>
    </main>

    <script src="/socket.io/socket.io.js"></script>
    <script src="/js/realTimeProducts.js"></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz"
      crossorigin="anonymous"
    ></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
  </body>
</html>